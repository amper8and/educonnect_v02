{
  "name": "educonnect-v2",
  "version": "2.0.0",
  "description": "MTN EduConnect V2.0 - Educational Solutions Portal",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=educonnect-staging --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy:staging": "npm run build && wrangler pages deploy dist --project-name educonnect-v2-staging",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name educonnect-v2",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:create": "wrangler d1 create educonnect-staging",
    "db:migrate:local": "wrangler d1 migrations apply educonnect-staging --local",
    "db:migrate:staging": "wrangler d1 migrations apply educonnect-staging",
    "db:seed": "wrangler d1 execute educonnect-staging --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute educonnect-staging --local",
    "db:console:staging": "wrangler d1 execute educonnect-staging",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "keywords": ["educonnect", "mtn", "education", "cloudflare"],
  "author": "MTN EBU",
  "license": "PROPRIETARY",
  "dependencies": {
    "hono": "^4.11.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260210.0",
    "@hono/vite-cloudflare-pages": "^0.4.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wrangler": "^4.64.0"
  }
}
